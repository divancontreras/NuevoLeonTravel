<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/question_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Es tu primera vez visitando Nuevo León?"
                android:textSize="18sp"
                android:textColor="@color/primaryText"/>

            <Button
                android:id="@+id/question_opt2_textView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/question_text_view"
                android:text="No"
                android:textColor="@color/colorAccent"
                android:background="?android:attr/selectableItemBackground"/>

            <Button
                android:id="@+id/question_opt1_textView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/question_text_view"
                android:layout_toStartOf="@id/question_opt2_textView"
                android:text="Si"
                android:textColor="@color/colorAccent"
                android:background="?android:attr/selectableItemBackground"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>