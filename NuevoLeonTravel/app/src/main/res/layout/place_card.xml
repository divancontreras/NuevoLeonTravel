<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/pizza"/>

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_image"
            android:text="Dominos Pizza"
            android:textSize="26sp"
            android:padding="5dp"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/place_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_name"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="4.5/5"/>

        <TextView
            android:id="@+id/place_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_rating"
            android:text="8119764536"
            android:textSize="16sp"
            android:padding="3dp"
            android:textColor="@color/secondaryText"/>


        <TextView
            android:id="@+id/place_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_phone"
            android:text="3124 calle pepe, colonia pepa."
            android:textSize="16sp"
            android:padding="3dp"
            android:textColor="@color/secondaryText"/>

        <TextView
            android:id="@+id/place_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_address"
            android:text="Abierto ahora: 10am - 8pm"
            android:textSize="16sp"
            android:padding="3dp"
            android:textColor="@color/secondaryText"/>

        <Button
            android:id="@+id/card1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/place_open"
            android:text="guardar"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:textColor="@color/colorAccent"
            android:background="?android:attr/selectableItemBackground"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>
